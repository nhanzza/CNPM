# Docker Environment Configuration
# Sử dụng file này khi chạy: docker-compose --env-file .env.docker up

# API URL - Thay đổi theo IP hoặc domain của máy chủ
# Nếu chạy cục bộ: http://localhost:8000
# Nếu muốn người khác truy cập, sử dụng IP của máy: http://192.168.1.100:8000
# LocalTunnel: https://bizflow-api.loca.lt/api
API_URL=http://localhost:8000/api

# Secret Key - Thay đổi trong production
SECRET_KEY=bizflow-super-secret-key-change-this-in-production-2024

# CORS Origins - Danh sách các origin được phép truy cập API
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://web:3000","http://localhost:8000","https://bizflow.loca.lt","https://bizflow-api.loca.lt","https://rotten-catfish-3.loca.lt","https://tiny-fish-30.loca.lt"]

# Database
POSTGRES_DB=bizflow
POSTGRES_USER=bizflow
POSTGRES_PASSWORD=bizflow123

# Redis
REDIS_PASSWORD=

# Debug mode
DEBUG=false
